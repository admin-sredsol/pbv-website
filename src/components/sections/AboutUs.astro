---
/**
 * Props:
 * - title: string (section heading)
 * - description: string (main text)
 * - image?: string (optional image URL)
 * - team?: Array<{ name: string, role: string, image?: string }>
 * - background?: string (Tailwind bg class, e.g. "bg-background-light")
 * - text?: string (Tailwind text color class, e.g. "text-body-dark")
 */
const {
    title = "About Us",
    description = "We are a passionate team dedicated to delivering innovative solutions and exceptional experiences. Our mission is to empower our community and clients through creativity, technology, and collaboration.",
    image,
    team = [],
    background = "bg-background-light",
    text = "text-body-dark",
} = Astro.props;
---

<section class={`py-16 px-4 ${background}`}>
    <div
        class="max-w-5xl mx-auto flex flex-col md:flex-row items-center gap-10"
    >
        {
            image && (
                <div class="flex-shrink-0 w-full md:w-1/3 mb-8 md:mb-0 flex justify-center">
                    <div class="w-90 md:w-98 aspect-[3/4] rounded-lg overflow-hidden shadow-lg bg-gray-200">
                        <img
                            src={image}
                            alt={title}
                            class="w-full h-full object-cover"
                        />
                    </div>
                </div>
            )
        }
        <div class={`flex-1 ${text}`}>
            <h2 class="text-3xl font-bold mb-4">{title}</h2>
            <p class="mb-6 text-lg">{description}</p>
            {
                team.length > 0 && (
                    <div>
                        <h3 class="text-xl font-semibold mb-4">Our Team</h3>
                        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                            {team.map((member) => (
                                <div class="flex flex-col items-center text-center">
                                    {member.image && (
                                        <img
                                            src={member.image}
                                            alt={member.name}
                                            class="w-20 h-20 rounded-full mb-2 object-cover shadow"
                                        />
                                    )}
                                    <div class="font-semibold">
                                        {member.name}
                                    </div>
                                    <div class="text-sm text-gray-500">
                                        {member.role}
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                )
            }
        </div>
    </div>
</section>
