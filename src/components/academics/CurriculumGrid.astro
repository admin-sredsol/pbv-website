---
import CourseCard from "./CourseCard.astro";
import {
  getPaddingClass,
  getBackgroundColor,
  getTextColor,
} from "../../utils/styleUtils";
import type { PaddingSize, ThemeColor } from "../../utils/styleUtils";

export interface Course {
  id?: string;
  title: string;
  code?: string;
  grade?: string | number;
  type?: "AP" | "State" | string;
  summary?: string;
  teacher?: string;
  syllabusUrl?: string;
  tags?: string[];
}

export interface Props {
  courses?: Course[];
  /**
   * Optional section title rendered above the grid.
   */
  title?: string;
  background?: ThemeColor;
  padding?: PaddingSize;
  paddingTop?: PaddingSize;
  paddingBottom?: PaddingSize;
  /**
   * Tailwind grid classes override (defaults to responsive 1-3 columns)
   */
  gridClass?: string;
}

const {
  courses = [],
  title,
  background = "base",
  padding,
  paddingTop,
  paddingBottom,
  gridClass = "grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
} = Astro.props as Props;

const bgColor = getBackgroundColor(background);
const textColor = getTextColor(background);
const paddingClass = getPaddingClass({ padding, paddingTop, paddingBottom });
---

<section class:list={["relative", bgColor, paddingClass]}>
  <div class="site-container px-4">
    {title && (
      <div class="mb-6">
        <h3 class:list={[textColor, "text-h4"]}>{title}</h3>
      </div>
    )}

    <div class:list={["grid gap-6", gridClass]}>
      {courses.map((course) => (
        <CourseCard course={course} background={background} />
      ))}
    </div>
  </div>
</section>

<style>
  /* simple helper to allow auto-fit grids if the consumer prefers */
  .grid-cols-auto-fit {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }
</style>
