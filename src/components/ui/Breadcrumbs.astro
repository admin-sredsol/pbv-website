---
export interface Crumb {
  name: string;
  href?: string;
}
const { crumbs = [] } = Astro.props;
---

<nav aria-label="Breadcrumb" class="mb-4">
  <ol class="flex text-sm text-gray-600 space-x-2">
    {crumbs.map((crumb, idx) => (
      <li class="flex items-center" key={idx}>
        {crumb.href && idx !== crumbs.length - 1 ? (
          <a href={crumb.href} class="hover:underline">{crumb.name}</a>
        ) : (
          <span class="font-semibold">{crumb.name}</span>
        )}
        {idx < crumbs.length - 1 && <span class="mx-2">/</span>}
      </li>
    ))}
  </ol>
</nav>
