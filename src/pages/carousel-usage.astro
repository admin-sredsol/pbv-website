---
import BaseLayout from "../layouts/BaseLayout.astro";
import Carousel from "../components/sections/Carousel.astro";
import Button from "../components/ui/Button.astro";

/*
  Example data sets used for the page. Replace image URLs with
  project images or CMS-provided URLs as needed.
*/
const basicSlides = [
    {
        image: "https://images.unsplash.com/photo-1506765515384-028b60a970df?w=1600&q=80&auto=format&fit=crop",
        alt: "Mountains at sunrise",
        heading: "Explore the mountains",
        subheading: "Adventure is out there",
        cta: { text: "Get started", link: "/get-started" },
    },
    {
        image: "https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?w=1600&q=80&auto=format&fit=crop",
        alt: "Forest path",
        heading: "Into the woods",
        subheading: "Find your path",
        cta: { text: "See tours", link: "/tours" },
    },
    {
        image: "https://images.unsplash.com/photo-1491553895911-0055eca6402d?w=1600&q=80&auto=format&fit=crop",
        alt: "Coastline",
        heading: "Coastal drives",
        subheading: "Drive the coastlines",
        cta: { text: "View trips", link: "/trips" },
    },
];

const autoplaySlides = [
    {
        image: "https://images.unsplash.com/photo-1516569422212-04a8b7d5c9b6?w=1600&q=80&auto=format&fit=crop",
        alt: "City skyline",
        heading: "City life",
        subheading: "Events and nightlife",
        cta: { text: "Book now", link: "/book" },
    },
    {
        image: "https://images.unsplash.com/photo-1508766206392-8bd5cf550d1b?w=1600&q=80&auto=format&fit=crop",
        alt: "Desert road",
        heading: "Open roads",
        subheading: "Freedom to roam",
        cta: { text: "Learn more", link: "/learn" },
    },
    {
        image: "https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=1600&q=80&auto=format&fit=crop",
        alt: "Lakeside cabin",
        heading: "Getaway",
        subheading: "Unplug in comfort",
        cta: { text: "Explore stays", link: "/stays" },
    },
];
---

<BaseLayout>
    <!-- Basic example -->
    <section class="mb-16">
        <h2 class="text-h4 mb-4">Basic usage</h2>
        <p class="mb-4 opacity-90">
            Pass an array of slide objects via the `items` prop. The first slide
            is loaded eagerly (for LCP) and subsequent slides are lazy-loaded.
        </p>

        <div class="mb-6">
            <Carousel items={basicSlides} />
        </div>
    </section>

    <!-- Autoplay example -->
    <section class="mb-16">
        <h2 class="text-h4 mb-4">Autoplay</h2>
        <p class="mb-4 opacity-90">
            Enable autoplay and set the interval (milliseconds). The carousel
            pauses on hover/focus and resumes when interaction ends.
        </p>

        <div class="mb-6">
            <Carousel items={autoplaySlides} heightClass="h-64 md:h-[520px]" />
        </div>
    </section>

    <!-- Slot example -->
    <section>
        <h2 class="text-h4 mb-4">Slot (custom slides)</h2>
        <p class="mb-4 opacity-90">
            If you prefer full control over slide markup or want to render
            non-image slides, pass content via the default slot.
        </p>

        <div class="mb-6">
            <!-- Example using slot: three custom slides with gradient backgrounds -->
            <Carousel>
                <div
                    class="h-56 md:h-96 flex items-center justify-center bg-gradient-to-r from-indigo-500 to-pink-500 text-white"
                >
                    <div class="text-center px-6">
                        <h3 class="text-h3 mb-2">Custom slide A</h3>
                        <p class="opacity-90 mb-4">
                            Fully custom content — not limited to images.
                        </p>
                        <Button href="/custom-a">Action A</Button>
                    </div>
                </div>

                <div
                    class="h-56 md:h-96 flex items-center justify-center bg-gradient-to-r from-green-500 to-emerald-400 text-white"
                >
                    <div class="text-center px-6">
                        <h3 class="text-h3 mb-2">Custom slide B</h3>
                        <p class="opacity-90 mb-4">
                            You can place any markup here.
                        </p>
                        <Button href="/custom-b" variant="secondary"
                            >Action B</Button
                        >
                    </div>
                </div>

                <div
                    class="h-56 md:h-96 flex items-center justify-center bg-gradient-to-r from-slate-700 to-slate-500 text-white"
                >
                    <div class="text-center px-6">
                        <h3 class="text-h3 mb-2">Custom slide C</h3>
                        <p class="opacity-90 mb-4">
                            Slides provided via the slot will still get the
                            carousel behavior.
                        </p>
                    </div>
                </div>
            </Carousel>
        </div>

        <div class="rounded border border-black p-4 bg-background/80">
            <div class="text-sm">
                <strong>Notes</strong>
                <ul class="list-disc list-inside mt-2">
                    <li>
                        When using the slot, the Carousel won't manage
                        lazy-loading for your markup — implement lazy-loading on
                        your own if you render <code>&lt;img&gt;</code> elements.
                    </li>
                    <li>
                        The Carousel exposes a small runtime API on the DOM node
                        (e.g. <code
                            >document.getElementById(&quot;...&quot;).carousel.next()</code
                        >) if you need to control it programmatically.
                    </li>
                </ul>
            </div>
        </div>
    </section>
</BaseLayout>
